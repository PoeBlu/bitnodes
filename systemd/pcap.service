[Unit]
Description=Start litecoin mainnet pcap script

[Service]
WorkingDirectory=/home/ubuntu/bitnodes
ExecStart=/home/ubuntu/.virtualenvs/bitnodes/bin/python -u pcap.py pcap.conf.default

# output goes to /var/log/syslog
StandardOutput=syslog
StandardError=syslog
User=ubuntu
Group=ubuntu

SyslogIdentifier=pcap

[Install]
WantedBy=multi-user.target
Alias=pcap.service

